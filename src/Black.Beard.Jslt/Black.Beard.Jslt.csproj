<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<RootNamespace>Bb</RootNamespace>
		<GenerateAppxPackageOnBuild>true</GenerateAppxPackageOnBuild>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<Description>Implementation of jslt language in DOTNET. Use a template for transform Json document to another json document.</Description>
		<PackageProjectUrl>https://github.com/Black-Beard-Sdk/jslt</PackageProjectUrl>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<AssemblyVersion></AssemblyVersion>
		<FileVersion></FileVersion>
		<RepositoryUrl>https://github.com/Black-Beard-Sdk/jslt</RepositoryUrl>
	</PropertyGroup>

	<ItemGroup>
		<Compile Remove="ConvertToDatables\**" />
		<Compile Remove="src\**" />
		<EmbeddedResource Remove="ConvertToDatables\**" />
		<EmbeddedResource Remove="src\**" />
		<None Remove="ConvertToDatables\**" />
		<None Remove="src\**" />
	</ItemGroup>

	<ItemGroup>
		<Compile Remove="Helpers\Crc32.cs" />
		<Compile Remove="Json\Jslt\Services\Factory.cs" />
		<Compile Remove="Json\Jslt\Services\ObjectCreator.cs" />
		<Compile Remove="Json\Jslt\Services\TranformJsonTemplateReader.cs" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Antlr4.Runtime.Standard" Version="4.9.3" />
		<PackageReference Include="Black.Beard.Helpers.ContentLoaders.Compress" Version="2.0.1" />
		<PackageReference Include="Black.Beard.Helpers.ContentLoaders.Files" Version="2.0.1" />
		<PackageReference Include="Black.Beard.Roslyn" Version="1.0.39" />
		<PackageReference Include="System.CodeDom" Version="7.0.0" />
	</ItemGroup>

	<ItemGroup>
		<Folder Include="git.Expressions\Expressions\Statements\" />
		<Folder Include="Json\Jslt\Parser\Grammar\.antlr\" />
		<Folder Include="Oldtonsoft.Json\" />
	</ItemGroup>

	<ItemGroup>
	  <None Include="..\..\LICENSE" Link="LICENSE" />
	  <None Include="Json\Jslt\CustomServices\Randomizers\CreditCardValidator\CreditCardValidator.csproj" />
	</ItemGroup>

	<ItemGroup>
		<Compile Update="git.Expressions\CsharpGenerators\ResourceString.Designer.cs">
			<DesignTime>True</DesignTime>
			<AutoGen>True</AutoGen>
			<DependentUpon>ResourceString.resx</DependentUpon>
		</Compile>
		<Compile Update="Json\Jslt\CustomServices\Csv\ExceptionMessage.Designer.cs">
		  <DesignTime>True</DesignTime>
		  <AutoGen>True</AutoGen>
		  <DependentUpon>ExceptionMessage.resx</DependentUpon>
		</Compile>
	</ItemGroup>

	<ItemGroup>
		<EmbeddedResource Update="git.Expressions\CsharpGenerators\ResourceString.resx">
			<Generator>ResXFileCodeGenerator</Generator>
			<LastGenOutput>ResourceString.Designer.cs</LastGenOutput>
		</EmbeddedResource>
		<EmbeddedResource Update="Json\Jslt\CustomServices\Csv\ExceptionMessage.resx">
		  <Generator>ResXFileCodeGenerator</Generator>
		  <LastGenOutput>ExceptionMessage.Designer.cs</LastGenOutput>
		</EmbeddedResource>
	</ItemGroup>

	<ItemGroup>
	  <None Update="README.md">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	</ItemGroup>

</Project>
