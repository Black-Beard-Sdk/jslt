<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <RootNamespace>Bb</RootNamespace>
    <GenerateAppxPackageOnBuild>true</GenerateAppxPackageOnBuild>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Description>Implementation of jslt language in DOTNET. Use a template for transform Json To another json. Consider the following template. note this template is a json that describe the structure of the target json. If the template is empty, the process return the initial source json.</Description>
    <PackageProjectUrl></PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/Black-Beard-Sdk/jslt</RepositoryUrl>
    <AssemblyVersion>$Env:APPVEYOR_BUILD_VERSION</AssemblyVersion>
    <FileVersion>$Env:APPVEYOR_BUILD_VERSION</FileVersion>
    <PackageLicenseFile>C:\Src\jslt\LICENSE</PackageLicenseFile>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="ConvertToDatables\**" />
    <EmbeddedResource Remove="ConvertToDatables\**" />
    <None Remove="ConvertToDatables\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Json\Jslt\Services\Factory.cs" />
    <Compile Remove="Json\Jslt\Services\ObjectCreator.cs" />
    <Compile Remove="Json\Jslt\Services\TranformJsonTemplateReader.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Antlr4.Runtime.Standard" Version="4.9.2" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    <PackageReference Include="SharpCompress" Version="0.30.1" />
    <PackageReference Include="System.CodeDom" Version="5.0.0" />
    <PackageReference Include="Ude.NetStandard" Version="1.2.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="git.Expressions\Expressions\Statements\" />
    <Folder Include="Json\Jslt\Parser\Grammar\.antlr\" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Black.Beard.Jslt.Roslyn\Black.Beard.Jslt.Roslyn.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="git.Expressions\CsharpGenerators\ResourceString.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>ResourceString.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="git.Expressions\CsharpGenerators\ResourceString.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>ResourceString.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <None Update="Jslt.nuspec">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
